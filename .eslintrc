{
  "extends": ["airbnb", "prettier"],
  "globals": {
    "window": true
  },
  "parser": "babel-eslint",
  "plugins": ["prettier"],
  "rules": {
    "import/extensions": 0,
    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved": [
      2,
      {
        "ignore": ["electron", "window"]
      }
    ],
    "react/jsx-fragments": 0,
    "react/prefer-stateless-function": 0,
    "no-console": 0,
    "no-unused-vars": [
      2,
      {
        "args": "all",
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "no-param-reassign": 0,
    "no-underscore-dangle": 0
  }
}
